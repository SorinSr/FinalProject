<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin16dp"
    android:layout_margin="@dimen/dim4dp"
    app:cardCornerRadius="@dimen/dim13dp">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:id="@+id/image_view_imagine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_insert_photo_black_24dp"/>

    <TextView
        android:id="@+id/text_view_nume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_weight="5"
        android:text="Numele excursiei"
        app:layout_constraintStart_toEndOf="@+id/image_view_imagine"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/text_view_destinatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="5"
        android:text="Destinaita excursiei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_imagine"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nume"
        app:layout_constraintVertical_bias="0.147"
        android:textColor="#FFF"/>

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>


